{
  "name": "@hydrofoil/hydra",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npx yarn-deduplicate",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "test": "c8 --all --reporter=lcov mocha --recursive packages/**/*.test.ts",
    "release": "changeset publish",
    "docs": "docsify serve ./docs",
    "talos:helptext:put": "ts-node packages/talos/bin/talos.ts help put > docs/talos/put.txt",
    "talos:helptext:put-vocab": "ts-node packages/talos/bin/talos.ts help put-vocabs > docs/talos/put-vocabs.txt",
    "typedoc": "typedoc --watch",
    "start": "node -r ts-node/register --inspect packages/knossos/index.ts serve http://db.labyrinth.lndo.site/repositories/labyrinth?infer=true --name conduit --codePath ./apps/conduit --user minos --password password"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.16.5",
    "@changesets/cli": "^2.10.2",
    "@tpluscode/eslint-config": "^0.3",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-quantifiers": "^1.0.0",
    "@types/chai-snapshot-matcher": "^1",
    "@types/clownface": "^1.0.3",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.8",
    "@types/fcostarodrigo__walk": "^5.0.0",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.0.0",
    "@types/once": "^1.4.0",
    "@types/rdf-ext": "^1.3.8",
    "@types/rdf-js": "^4.0.2",
    "@types/rdf-loader-code": "^0.3.3",
    "@types/rdf-loaders-registry": "^0.3.0",
    "@types/rdfjs__express-handler": "^1.1.5",
    "@types/rdfjs__namespace": "^1.1.3",
    "@types/rdfjs__term-map": "^1",
    "@types/rdfjs__term-set": "^1.0.1",
    "@types/set-link": "^1.0.1",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.8",
    "@types/sparql-http-client": "^2.2.5",
    "@types/sparqljs": "^3.0.1",
    "@types/supertest": "^2.0.11",
    "@types/wait-on": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "c8": "^7.9.0",
    "chai-as-promised": "^7.1.1",
    "chai-quantifiers": "^1.0.15",
    "chai-snapshot-matcher": "^2.0.2",
    "docsify-cli": "^4.4.3",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.5",
    "sinon-chai": "^3.7.0",
    "standard": "^16.0.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.0.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "resolutions": {
    "@types/rdf-js": "^4.0.0"
  },
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "mocha-setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
