{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "baseUrl": ".",
    "paths": {
      "knossos/*": ["packages/knossos/*"],
      "labyrinth/*": ["packages/labyrinth/*"]
    }
  },
  "include": [
    "apps",
    "types",
    "packages"
  ],
  "exclude": ["packages/*/bin/*.ts"]
}
