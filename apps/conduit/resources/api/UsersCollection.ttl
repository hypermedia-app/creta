@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix auth: <https://hypermedia.app/auth#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix knossos: <https://hypermedia.app/knossos#> .
@prefix code: <https://code.described.at/> .
@prefix hydra: <http://www.w3.org/ns/hydra/core#> .

</api/UsersCollection>
  a hydra:Class ;
  knossos:createWithPUT true ;
  hydra:supportedOperation
    [
      auth:access acl:Create ;
      hydra:method "POST" ;
      hydra:title "Register" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <node:@hydrofoil/knossos/collection#POST> ;
        ] ;
    ] ;
  knossos:memberTemplate [
    a hydra:IriTemplate ;
    hydra:template "/user/{name}" ;
    hydra:mapping
      [
        hydra:variable "name" ;
        hydra:property foaf:nick ;
        hydra:require true ;
      ];
  ] ;
.
